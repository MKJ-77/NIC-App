<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Amount" parent="android:Widget.EditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/Amount</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/amaranth_bold_italic</item>
    </style>

    <style name="DateTextStyle" parent="android:Widget.EditText">
        <item name="android:inputType">date</item>
        <item name="android:hint">@string/DateFormat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="RoIEditTextStyle" parent="android:Widget.EditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/Common_Rate</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/amaranth_bold_italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BuffTextStyle" parent="android:Widget.EditText">
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/bufferdays</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/amaranth_bold_italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>